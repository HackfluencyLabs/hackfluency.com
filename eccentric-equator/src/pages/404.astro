---
// Static 404 page - works with GitHub Pages static hosting
const homeUrl = 'https://www.hackfluency.com';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Redirecting... | Hackfluency</title>
    <meta http-equiv="refresh" content={`0; url=${homeUrl}`} />
    <link rel="icon" type="image/png" href="/HFNeon.png" />
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body {
        font-family: 'Inter', system-ui, sans-serif;
        background: #0a0a0a;
        color: #ffffff;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
      .redirect-container {
        padding: 40px;
      }
      .logo {
        width: 80px;
        height: 80px;
        margin-bottom: 24px;
        animation: pulse 2s ease-in-out infinite;
      }
      @keyframes pulse {
        0%, 100% { opacity: 1; transform: scale(1); }
        50% { opacity: 0.8; transform: scale(0.95); }
      }
      h1 {
        font-family: 'Space Grotesk', sans-serif;
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 12px;
        color: #00D26A;
      }
      p {
        color: #6a6a6a;
        font-size: 0.9rem;
        margin-bottom: 24px;
      }
      .redirect-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: rgba(0, 210, 106, 0.1);
        border: 1px solid rgba(0, 210, 106, 0.3);
        border-radius: 8px;
        color: #00D26A;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        transition: all 0.2s;
      }
      .redirect-link:hover {
        background: rgba(0, 210, 106, 0.2);
        border-color: #00D26A;
      }
    </style>
  </head>
  <body>
    <div class="redirect-container">
      <img src="/HFNeon.png" alt="Hackfluency" class="logo" />
      <h1>Page Not Found</h1>
      <p>Redirecting you to our homepage...</p>
      <a href={homeUrl} class="redirect-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2z"/>
          <polyline points="9 22 9 12 15 12 15 22"/>
        </svg>
        Go to Homepage
      </a>
    </div>
    <script define:vars={{ homeUrl }}>
      // Client-side redirect as backup
      window.location.replace(homeUrl);
    </script>
  </body>
</html>
